1. Имена хостов в созданных ВМ должны быть установлены в соответствии со схемой:

ISP:
# hostnamectl set-hostname ISP

RTR-L:
# hostnamectl set-hostname RTR-L

RTR-R:
# hostnamectl set-hostname RTR-R

SRV:
# hostnamectl set-hostname SRV

WEB-L:
# hostnamectl set-hostname WEB-L

WEB-R:
# hostnamectl set-hostname WEB-R

CLI:
# hostnamectl set-hostname CLI

2. Адресация должна быть выполнена в соответствии с Таблицей 1:

ISP: 
# vi /etc/sysconfig/network-scripts/ifcfg-enp0s8
TYPE=Ethernet
BOOTPROTO=static
NAME=enp0s8
ONBOOT=yes
IPADDR=4.4.4.1
NETMASK=255.255.255.0
DEVICE=enp0s8

# vi /etc/sysconfig/network-scripts/ifcfg-enp0s9
TYPE=Ethernet
BOOTPROTO=static
NAME=enp0s9
ONBOOT=yes
IPADDR=5.5.5.1
NETMASK=255.255.255.0
DEVICE=enp0s9

# vi /etc/sysconfig/network-scripts/ifcfg-enp0s10
TYPE=Ethernet
BOOTPROTO=static
NAME=enp0s10
ONBOOT=yes
IPADDR=3.3.3.1
NETMASK=255.255.255.0
DEVICE=enp0s10

#systemctl restart NetworkManagers


RTR-L:
# vi /etc/sysconfig/network-scripts/ifcfg-enp0s3
TYPE=Ethernet
BOOTPROTO=static
NAME=enp0s3
ONBOOT=yes
IPADDR=4.4.4.100
NETMASK=255.255.255.0
GATEWAY=4.4.4.1
DNS1=4.4.4.1
DEVICE=enp0s3

# vi /etc/sysconfig/network-scripts/ifcfg-enp0s8
TYPE=Ethernet
BOOTPROTO=static
NAME=enp0s8
ONBOOT=yes
IPADDR=192.168.100.254
NETMASK=255.255.255.0
DEVICE=enp0s8

#systemctl restart NetworkManagers

RTR-R:
# vi /etc/sysconfig/network-scripts/ifcfg-enp0s3
TYPE=Ethernet
BOOTPROTO=static
NAME=enp0s3
ONBOOT=yes
IPADDR=5.5.5.100
NETMASK=255.255.255.0
GATEWAY=5.5.5.1
DNS1=5.5.5.1
DEVICE=enp0s3

# vi /etc/sysconfig/network-scripts/ifcfg-enp0s8
TYPE=Ethernet
BOOTPROTO=static
NAME=enp0s8
ONBOOT=yes
IPADDR=172.16.100.254
NETMASK=255.255.255.0
DEVICE=enp0s8

#systemctl restart NetworkManagers

